@model OnlineShop.Models.Category

<h2>Editare categorie</h2>

<form method="post" action="/Categories/Edit/@Model.CategoryId">
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.HiddenFor(m => m.CategoryId)
    @Html.Label("CategoryName", "Denumire categorie")
    <br />
    @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
    <br />
    @Html.Label("CategoryDescription", "Descriere categorie")
    <br />
    @Html.TextAreaFor(m => m.CategoryDescription, new { @class = "form-control" })
    <br /><br />

    <button class="btn btn-success" type="submit">Modifica categoria</button>
</form>


